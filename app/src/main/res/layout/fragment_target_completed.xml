<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.TargetCompletedFragment">

    <TextView
        android:id="@+id/target_compltd_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/rubik"
        android:text="WHAT PAGE DID YOU REACH?"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/target_compltd_icon" />

    <Button
        android:id="@+id/target_compltd_btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="32dp"
        android:text="SAVE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/target_compltd_input_nmbr" />

    <EditText
        android:id="@+id/target_compltd_input_nmbr"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/target_compltd_question" />

    <TextView
        android:id="@+id/target_compltd_txt_book_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="TextView"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/target_compltd_icon"
        android:layout_width="126dp"
        android:layout_height="126dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_open_book"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/target_compltd_txt_book_name" />

    <TextView
        android:id="@+id/target_compltd_prfx_first_pargph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="LENGTH:"
        app:layout_constraintBottom_toBottomOf="@+id/target_compltd_icon"
        app:layout_constraintEnd_toEndOf="@+id/target_compltd_prfx_second_pargph"
        app:layout_constraintTop_toTopOf="@+id/target_compltd_icon" />

    <TextView
        android:id="@+id/target_compltd_prfx_second_pargph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="READEN PAGES:"
        app:layout_constraintBottom_toBottomOf="@+id/target_compltd_icon"
        app:layout_constraintStart_toEndOf="@+id/target_compltd_icon"
        app:layout_constraintTop_toTopOf="@+id/target_compltd_icon" />

    <TextView
        android:id="@+id/target_compltd_first_pargph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/target_compltd_prfx_first_pargph"
        app:layout_constraintStart_toEndOf="@+id/target_compltd_prfx_first_pargph"
        app:layout_constraintTop_toTopOf="@+id/target_compltd_prfx_first_pargph" />

    <TextView
        android:id="@+id/target_compltd_second_pargph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/target_compltd_prfx_second_pargph"
        app:layout_constraintStart_toEndOf="@+id/target_compltd_prfx_second_pargph"
        app:layout_constraintTop_toTopOf="@+id/target_compltd_prfx_second_pargph" />


</androidx.constraintlayout.widget.ConstraintLayout>